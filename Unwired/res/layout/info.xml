<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView 
    android:id="@+id/txtheading"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CONTACT US "
    android:textColor="#FFFFFF"
    android:textSize="30dp"
    android:layout_marginBottom="10dp"
    android:layout_centerHorizontal="true"/>

<TextView
    android:id="@+id/contactus"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/txtheading"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus2"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus3"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus2"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus4"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus3"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus6"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus4"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus7"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus6"
    android:layout_alignParentLeft="true" />

<TextView
    android:id="@+id/contactus5"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:gravity="left"
    android:layout_below="@id/contactus4"
    android:layout_alignParentLeft="true" />

</RelativeLayout>
</ScrollView>